{
    "diagnostic.checkCurrentLine": true,
    "coc.preferences.formatOnSaveFiletypes": ["dart" , "rust", "javascript", "c", "cpp", "python", "haskell"],
    "python.formatting.provider": "black",
    "python.linting.pylintEnalbed": true,
    "python.linting.pylintArgs": ["--extension-pkg-whitelist=numpy,cv2", "--disable=C0103,C0330", "--init-hook"],
    "languageserver": {
      "haskell": {
        "command": "haskell-language-server-wrapper",
        "args": ["--lsp"],
        "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
        "filetypes": ["haskell", "lhaskell"]
      },
      "erlang": {
          "command": "erlang_ls",
          "filetypes": ["erlang"]
      }
    }
}

